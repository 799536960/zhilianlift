<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="14dp"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/img_60"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_Nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="51dp"
            android:text="昵称"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_commentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:text="2017-1-11"
            android:textColor="@color/hui2"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.duma.ld.zhilianlift.widget.SimpleRatingBar
            android:id="@+id/rating_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:srb_borderColor="@color/hong"
            app:srb_drawBorderEnabled="true"
            app:srb_fillColor="@color/hong"
            app:srb_isIndicator="true"
            app:srb_rating="1"
            app:srb_starBorderWidth="1"
            app:srb_starSize="9dp"
            app:srb_starsSeparation="5dp" />

    </android.support.constraint.ConstraintLayout>

    <com.duma.ld.zhilianlift.widget.GridLayout
        android:id="@+id/gridLayout_imgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="12dp"
        android:text="凑单卖的 不知道味道如何！不过很便宜！ 日期一般 不算好。" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginTop="14dp"
        android:text="美式香浓挂耳咖啡5袋／盒"
        android:textColor="@color/hui2"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_shopTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginTop="8dp"
        android:text="购买日期：2017-11-09"
        android:textColor="@color/hui2"
        android:textSize="12sp" />

    <View
        style="@style/henxian"
        android:layout_marginTop="14dp" />
</LinearLayout>