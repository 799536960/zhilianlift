<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.bingoogolapple.qrcode.zxing.ZXingView
        android:id="@+id/zxingview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:qrcv_animTime="1000"
        app:qrcv_borderColor="#00000000"
        app:qrcv_borderSize="4dp"
        app:qrcv_cornerColor="@color/white"
        app:qrcv_cornerLength="25dp"
        app:qrcv_cornerSize="4dp"
        app:qrcv_isOnlyDecodeScanBoxArea="true"
        app:qrcv_maskColor="#78000000"
        app:qrcv_rectWidth="210.5dp"
        app:qrcv_scanLineColor="@color/white"
        app:qrcv_scanLineSize="1dp"
        app:qrcv_topOffset="113dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="340.5dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="请对准商户二维码"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/img_deng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/saoma" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="打开手电筒"
            android:textColor="@color/white" />
    </LinearLayout>

</FrameLayout>