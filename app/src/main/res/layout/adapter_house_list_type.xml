<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/layout_img"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="17dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/img_house"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />
    </FrameLayout>


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="17dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="11111111111111111111111111111111111"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/layout_img" />

    <TextView
        android:id="@+id/tv_spec1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:text="3室2厅2卫    132㎡    南北"
        android:textColor="@color/hui2"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/layout_img"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_spec2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:text="萧山区    西子三水公寓"
        android:textColor="@color/hui2"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/layout_img"
        app:layout_constraintTop_toBottomOf="@+id/tv_spec1" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/layout_img"
        app:layout_constraintTop_toBottomOf="@+id/tv_spec2" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="5000元/月"
        android:textColor="@color/huang1"
        app:layout_constraintStart_toEndOf="@+id/layout_img"
        app:layout_constraintTop_toBottomOf="@+id/rv_list" />

    <TextView
        android:id="@+id/tv_money2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="5909元/平"
        android:textColor="@color/hui2"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_money"
        app:layout_constraintStart_toEndOf="@+id/tv_money" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:text="0次浏览"
        android:textColor="@color/hui2"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_money"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>