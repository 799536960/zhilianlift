<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="12dp"
        android:src="@drawable/tmsanjiao" />

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/lr_4_tm_hei"
        android:orientation="vertical"
        android:paddingEnd="10dp">

        <LinearLayout
            android:id="@+id/layout_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.duma.ld.zhilianlift.widget.LinearImageLayout
                android:id="@+id/img_message"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:gravity="center|left"
                app:LiIcon="@drawable/wode15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="消息"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            style="@style/henxian"
            android:layout_marginStart="10dp"
            android:background="#999999" />

        <LinearLayout
            android:id="@+id/layout_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.duma.ld.zhilianlift.widget.LinearImageLayout
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:gravity="center|left"
                app:LiIcon="@drawable/goods_pop1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="首页"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            style="@style/henxian"
            android:layout_marginStart="10dp"
            android:background="#999999" />

        <LinearLayout
            android:id="@+id/layout_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.duma.ld.zhilianlift.widget.LinearImageLayout
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:gravity="center|left"
                app:LiIcon="@drawable/goods_pop2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="搜索"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            style="@style/henxian"
            android:layout_marginStart="10dp"
            android:background="#999999" />

        <LinearLayout
            android:id="@+id/layout_collect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.duma.ld.zhilianlift.widget.LinearImageLayout
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:gravity="center|left"
                app:LiIcon="@drawable/goods_pop3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="我的收藏"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            style="@style/henxian"
            android:layout_marginStart="10dp"
            android:background="#999999" />

        <LinearLayout
            android:id="@+id/layout_jilu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.duma.ld.zhilianlift.widget.LinearImageLayout
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:gravity="center|left"
                app:LiIcon="@drawable/goods_pop4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="浏览记录"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>