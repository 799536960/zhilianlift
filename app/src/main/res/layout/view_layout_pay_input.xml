<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <View style="@style/henxian_0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_1"
            style="@style/view_pay_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1" />

        <View style="@style/shuxian_0" />

        <TextView
            android:id="@+id/tv_2"
            style="@style/view_pay_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2" />

        <View style="@style/shuxian_0" />

        <TextView
            android:id="@+id/tv_3"
            style="@style/view_pay_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3" />

    </LinearLayout>

    <View style="@style/henxian_0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_4"
            style="@style/view_pay_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:text="4" />

        <View style="@style/shuxian_0" />

        <TextView
            android:id="@+id/tv_5"
            style="@style/view_pay_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5" />

        <View style="@style/shuxian_0" />

        <TextView
            android:id="@+id/tv_6"
            style="@style/view_pay_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6" />

    </LinearLayout>

    <View style="@style/henxian_0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_7"
            style="@style/view_pay_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7" />

        <View style="@style/shuxian_0" />

        <TextView
            android:id="@+id/tv_8"
            style="@style/view_pay_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8" />

        <View style="@style/shuxian_0" />

        <TextView
            android:id="@+id/tv_9"
            style="@style/view_pay_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9" />

    </LinearLayout>

    <View style="@style/henxian_0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ok"
            style="@style/view_pay_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="完成" />

        <View style="@style/shuxian_0" />

        <TextView
            android:id="@+id/tv_0"
            style="@style/view_pay_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0" />

        <View style="@style/shuxian_0" />

        <FrameLayout
            android:id="@+id/layout_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple_bai">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/tuige" />
        </FrameLayout>


    </LinearLayout>
</LinearLayout>
