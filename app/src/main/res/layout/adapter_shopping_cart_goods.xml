<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">

        <com.duma.ld.zhilianlift.widget.CheckBoxNoOnClick
            android:id="@+id/cb_Select"
            style="@style/shopping_cart_cb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:textSize="15sp" />

        <!--<FrameLayout-->
        <!--android:layout_width="95dp"-->
        <!--android:layout_height="95dp"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:background="@drawable/bx_4_hui3"-->
        <!--android:padding="2dp">-->

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_gravity="center" />
        <!--</FrameLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="网易严选 美式挂耳咖啡 中毒中毒中毒烘焙研磨阿拉卡比咖啡豆咖啡粉 100克"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_goods_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="颜色:深灰色"
                android:textColor="@color/hui2"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/layout_goods_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lr_2_hui"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_goods_type2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="颜色:深灰色"
                    android:textColor="@color/hui2"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:src="@drawable/shopping1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_goods_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10033"
                    android:textColor="@color/hong" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <com.duma.ld.zhilianlift.widget.NumInputLayout
                    android:id="@+id/numInput"
                    android:layout_width="85dp"
                    android:layout_height="24dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View style="@style/henxian" />
</LinearLayout>