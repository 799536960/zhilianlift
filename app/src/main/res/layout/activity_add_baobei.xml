<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/house_info"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/baobei" />

        <EditText
            android:id="@+id/edit_beiTuiJian_name"
            style="@style/edit_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入被推荐人姓名"
            android:inputType="text" />
    </LinearLayout>

    <View style="@style/henxian" />

    <LinearLayout
        style="@style/house_info"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="手机号：" />

        <EditText
            android:id="@+id/edit_beiTuiJian_phone"
            style="@style/edit_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入被推荐人手机号码"
            android:inputType="text"
            android:maxLength="11" />
    </LinearLayout>

    <View style="@style/henxian" />

    <LinearLayout
        style="@style/house_info"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="14dp"
            android:text="@string/baobei1" />

        <EditText
            android:id="@+id/edit_beizhu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="14dp"
            android:background="@null"
            android:gravity="top"
            android:hint="请输入备注，入如被推荐人的购房需求等"
            android:maxLength="200"
            android:paddingStart="7dp"
            android:textSize="14sp" />
    </LinearLayout>

    <View style="@style/henxian" />

    <LinearLayout
        style="@style/house_info"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="推荐人：" />

        <EditText
            android:id="@+id/edit_name"
            style="@style/edit_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入您的姓名(选填)"
            android:inputType="text" />
    </LinearLayout>

    <View style="@style/henxian" />

    <LinearLayout
        style="@style/house_info"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="手机号：" />

        <EditText
            android:id="@+id/edit_phone"
            style="@style/edit_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入您的手机号(选填)"
            android:inputType="number" />
    </LinearLayout>

    <View style="@style/henxian" />

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/lr_19_huang"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="17sp" />
</LinearLayout>