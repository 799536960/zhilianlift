<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hui_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="14dp"
            android:text="小区概况(选填)" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bx_0_hui2"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_xiaoQu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="top"
                android:hint="请在此输入小区概况"
                android:maxLength="500"
                android:padding="8dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_xiaoQu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:text="500"
                android:textColor="@color/hui2"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="14dp"
            android:text="交通状况(选填)" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bx_0_hui2"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_jiaoTong"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="top"
                android:hint="请在此输入交通状况"
                android:maxLength="500"
                android:padding="8dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_jiaoTong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:text="500"
                android:textColor="@color/hui2"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="14dp"
            android:text="周边配套(选填)" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/bx_0_hui2"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_zhoubian"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="top"
                android:hint="请在此输入周边配套"
                android:maxLength="500"
                android:padding="8dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_zhoubian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:text="500"
                android:textColor="@color/hui2"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>