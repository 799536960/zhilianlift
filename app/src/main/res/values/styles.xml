<resources>

    <style name="baseStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <!--导航栏颜色-->
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="baseStyle">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="LaunchStyle" parent="baseStyle">
        <item name="android:windowBackground">@drawable/shape_launch</item>
    </style>

    <style name="AppTheme_tm" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme_tm_hei" parent="baseStyle">
        <item name="android:windowBackground">@color/transparent_hei</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme_tm_tm" parent="baseStyle">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/bule</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/bule</item>
    </style>


    <style name="layout_padding">
        <item name="android:paddingLeft">11dp</item>
        <item name="android:paddingRight">11dp</item>
    </style>
    <!--横线-->
    <style name="henxian">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/hui4</item>
    </style>

    <style name="henxian_0">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/hui4</item>
    </style>
    <!--竖线-->
    <style name="shuxian">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/hui4</item>
    </style>

    <style name="shuxian_0">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/hui4</item>
    </style>

    <style name="layout_userdata_padding">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="edit_base">
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PopupDialog" parent="Theme.AppCompat.Light.Dialog">
        <!--<style name="PopupDialog" parent="android:Theme.Dialog">-->
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="colorPrimary">@color/primary</item>
        <!--导航栏颜色-->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_buttom_out</item>
    </style>

    <style name="base_edittext">
        <item name="android:textColor">@color/hei1</item>
        <item name="android:textColorHint">@color/hui1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:theme">@style/MyEditText</item>
        <item name="android:maxLength">100</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/hui2</item>
        <item name="colorControlActivated">@color/hui2</item>
    </style>

    <style name="baseButton">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/hei1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="goods_style">
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="view_grid_layout_img">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TabLayoutTextSizeStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="shopping_cart_cb">
        <item name="android:layout_marginLeft">6dp</item>
    </style>

    <style name="view_pay_password">
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="view_pay_input">
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/ripple_bai</item>
    </style>

    <style name="order_info">
        <item name="android:background">@color/white</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingEnd">13dp</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:paddingTop">14dp</item>
    </style>

    <style name="apply_refund">
        <item name="android:background">@color/white</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="house_info">
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="edit_1">
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">7dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="edit_2">
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
